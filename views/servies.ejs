  <title>Our Services | Kristen's Glam Hub</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Edu+AU+VIC+WA+NT+Arrows:wght@400..700&display=swap"
      rel="stylesheet"
    />
  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background-color: #fff8f5;
    }
    header {
      text-align: center;
      padding: 40px 20px;
      background: linear-gradient(to right, #f3d1dc, #ffe0f0);
    }
    header h1 {
        font-family: "Edu AU VIC WA NT Arrows", cursive;
      font-size: 48px;
      margin: 0;
      color: #5a2a55;
    }
    .section {
      padding: 40px 20px;
    }
    .section h2 {
      font-size: 32px;
      color: #d63384;
      margin-bottom: 20px;
      text-align: center;
    }
    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      padding: 0 20px;
    }
    .service-box {
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      cursor: pointer;
    }
    .service-box:hover {
      transform: scale(1.03);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    }
    .service-box img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }
    .service-box h3 {
      margin: 15px;
      font-size: 20px;
      color: #333;
    }
    .service-box p {
      margin: 0 15px 15px;
      font-size: 14px;
      color: #666;
    }
